<div class="page-header">
  <h1>All Posts</h1>
</div>
<% posts.each do |post| %>
  <div class="jumbotron post_<%= post.id %>">
    <h3><%= link_to post.title.capitalize, post_path(post) %></h3>
    <p><%= post.body %></p>

    <h4 class="pull-right"> Tags:
      <% post.tags.each do |tag| %>
        <%= render "shared/tag", tag: tag %>
      <% end %>
    </h4>

    <div class="comments">
      <% post.comments.first(3).each do |comment| %>
        <%= render "shared/comment", comment: comment %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="pagination-links pull-right">
  <%= paginate posts %>
</div>
