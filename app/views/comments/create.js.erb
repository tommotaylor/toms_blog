<% if @comment.valid? %>
  $(".comments-container").prepend("<%= escape_javascript (render partial: 'shared/comment', locals: { comment: @comment }) %>");
  $("#new_comment")[0].reset();
<% else %>
  $(".comment-form").prepend("<div class='alert alert-danger alert-dismissible' role='alert'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>Comment and username required</div>");
<% end %>
