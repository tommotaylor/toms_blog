<div class="comment-form">
  <%= bootstrap_form_for comment, remote: true, authenticity_token: true do |f| %>
    <%=f.text_area :body, label: "Leave a comment:" %>
    <%=f.text_field :user, label: "Username" %>
    <%= f.hidden_field "commentable_id", value: resource.id %>
    <%= f.hidden_field "commentable_type", value: resource.class.name %>
    <%= f.submit "Create comment",  class: "btn btn-primary", id: "comment-button" %>
  <% end %>
</div>
